<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:id="@+id/buildFragment"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="350dp">

        <Button
            android:id="@+id/btnintel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:backgroundTint="#14FFFFFF"
            android:textSize="18sp"
            tools:ignore="MissingConstraints"
            tools:layout_conversion_absoluteHeight="150dp"
            tools:layout_conversion_absoluteWidth="403dp"
            tools:layout_editor_absoluteX="-16dp"
            tools:layout_editor_absoluteY="-28dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#860071C5"
            android:layout_marginStart="16dp"
            android:layout_marginTop="64dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="16dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="54dp"
                android:layout_height="50dp"
                android:src="@drawable/cpu1" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="64dp"
                android:layout_height="50dp"
                android:src="@drawable/hardware" />

            <ImageView
                android:layout_width="63dp"
                android:layout_height="50dp"
                android:src="@drawable/ssddrive" />

            <ImageView
                android:layout_width="73dp"
                android:layout_height="50dp"
                android:src="@drawable/motherboard" />

            <ImageView
                android:layout_width="64dp"

                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/ram" />

            <ImageView
                android:layout_width="68dp"
                android:layout_height="50dp"
                android:src="@drawable/powersupply" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtintel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="322dp"
            android:layout_marginBottom="110dp"
            android:elevation="100dp"
            android:text=" INTEL"
            android:textColor="#299EED"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/btnintel"
            app:layout_constraintEnd_toEndOf="@+id/btnintel"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints"
            tools:layout_conversion_absoluteHeight="40dp"
            tools:layout_conversion_absoluteWidth="82dp"
            android:layout_marginRight="322dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp">

        <Button
            android:id="@+id/btnamd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#19FFFFFF"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:ignore="MissingConstraints"
            tools:layout_conversion_absoluteHeight="150dp"
            tools:layout_conversion_absoluteWidth="403dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp"

            />

        <TextView
            android:id="@+id/txtamd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="322dp"
            android:layout_marginBottom="110dp"
            android:elevation="100dp"
            android:text=" AMD"
            android:textColor="#F11A1A"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/btnamd"
            app:layout_constraintEnd_toEndOf="@+id/btnamd"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints"
            tools:layout_conversion_absoluteHeight="40dp"
            tools:layout_conversion_absoluteWidth="82dp"
            android:layout_marginRight="322dp" />
        <LinearLayout
            android:backgroundTint="#A1EC4C4C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FBFBFB"
            android:layout_marginStart="16dp"
            android:layout_marginTop="64dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="16dp">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="54dp"
                android:layout_height="50dp"
                android:src="@drawable/cpu1" />

            <ImageView
                android:id="@+id/imageView51"
                android:layout_width="64dp"
                android:layout_height="50dp"
                android:src="@drawable/hardware" />

            <ImageView
                android:layout_width="63dp"
                android:layout_height="50dp"
                android:src="@drawable/ssddrive" />

            <ImageView
                android:layout_width="73dp"
                android:layout_height="50dp"
                android:src="@drawable/motherboard" />

            <ImageView
                android:layout_width="64dp"

                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/ram" />

            <ImageView
                android:layout_width="68dp"
                android:layout_height="50dp"
                android:src="@drawable/powersupply" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>










</RelativeLayout>